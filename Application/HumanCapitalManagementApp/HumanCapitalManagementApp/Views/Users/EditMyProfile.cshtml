@model UserProfileInfoDTOin
@{
    ViewData["Title"] = "Edit Personal Data";
    ICollection<TownOptionDTOout> towns = ViewData["Towns"] as ICollection<TownOptionDTOout>;
}
<h1 class="text-center"><i class="fas fa-user-cog"></i> @ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-9 justify-content-between ">
        <hr />
        <section>
            <form method="post" class="row justify-content-between">
                <div class="col-md-6 pr-3">
                    <div class="form-group">
                        <label asp-for="@Model.Username"></label>
                        <input asp-for="@Model.Username" class="form-control" disabled />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.FirstName">First Name</label>
                        <input placeholder="first name..." asp-for="@Model.FirstName" class="form-control" />
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.MiddleName">Middle Name</label>
                        <input placeholder="last name...optional" asp-for="@Model.MiddleName" class="form-control" />
                        <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.LastName">Last Name</label>
                        <input placeholder="last name..." asp-for="@Model.LastName" class="form-control" />
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email"></label>
                        <input type="email"  asp-for="@Model.Email" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DateOfBirth">BirthDate</label>
                        <input type="date" placeholder="birthdate..." asp-for="@Model.DateOfBirth" class="form-control" />
                        <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 pl-3">
                    <div class="form-group">
                        <label asp-for="@Model.MailingAddress">MailingAddress Address</label>
                        <input placeholder="address..." asp-for="@Model.MailingAddress" class="form-control" minLenght="6" required />
                        <span asp-validation-for="@Model.MailingAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Phone">Phone Number</label>
                        <input placeholder="phone number..." asp-for="@Model.Phone" class="form-control" />
                        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Gender">Gender</label>
                        <select required asp-for="@Model.Gender" class="form-control">
                            @foreach (Gender gender in Enum.GetValues(typeof(Gender)))
                            {
                                <option value="@((int)gender)"> @gender.ToString()</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ResidenceTownId">Residence Town</label>
                        <select required asp-for="@Model.ResidenceTownId" class="form-control">
                            @foreach (TownOptionDTOout town in towns.OrderBy(x=>x.CountryName))
                            {
                                <option value="@town.Id"> @town.Name in @town.CountryName</option>

                            }
                        </select>
                        <span asp-validation-for="@Model.ResidenceTownId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.PasswordInputed">Authentication Password</label>
                        <input type="password" required placeholder="password..." asp-for="@Model.PasswordInputed" class="form-control" />
                        <span asp-validation-for="@Model.PasswordInputed" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="@Model.PasswordHashed" />
                    <input type="hidden" asp-for="@Model.Username" />
                    <input type="hidden" asp-for="@Model.Email" />
                </div>
                <div class="col-md-12 form-group row justify-content-center">
                    <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> Edit My Data</button>
                </div>
            </form>
        </section>
    </div>
</div>
